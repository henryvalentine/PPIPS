@model ImportPermitPortal.EF.Model.Application

@{
    ViewBag.Title = "Toggle Application";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Process Application</h2>


<form method="POST" action="/Application/NextStep" style="width: 100%">
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-md-5">
            <label class="control-label">Company</label>
        </div>
        <div class="col-md-7">
            <label class="control-label">@(Model.ApplicationId)</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <label class="control-label">DerivedTotalQUantity</label>
        </div>
        <div class="col-md-7">
            <label class="control-label">@(Model.DerivedTotalQUantity)</label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <label class="control-label">Derived Total Value</label>
        </div>
        <div class="col-md-7">
            <label class="control-label">@(Model.DerivedValue)</label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <label class="control-label">Import Appplication Items Break down</label>
        </div>
        <div class="row">
            @foreach (var app in Model.ApplicationItems)
            {
                <div class="row">
                    <div class="row">
                        <label class="control-label">@(app.Product.Name)(@app.Product.Code)</label>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <label class="control-label">Estimated Quantity</label>
                        </div>
                        <div class="col-md-7">
                            <label class="control-label">@(app.EstimatedQuantity)</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <label class="control-label">Estimated Value</label>
                        </div>
                        <div class="col-md-7">
                            <label class="control-label">@(app.EstimatedValue)</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <label class="control-label">Port Of Origin</label>
                        </div>
                        <div class="col-md-7">
                            <label class="control-label">@(app.CountryOfOriginName)</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <label class="control-label">Port Of Discharge</label>
                        </div>
                        <div class="col-md-7">
                            <label class="control-label">@(app.DischargeDepotName)</label>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            @Html.RadioButtonFor(m => m.Rejected, "Reject", new { @checked = "checked" })
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-4">
            @Html.RadioButtonFor(m => m.Rejected, "Approve", new { @checked = "checked" })
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</form>
<br/><br />
<div class="row">
    <div class="col-md-2">
        <a class="btn btn-danger" href="/Application/Applications" style="float: right"><< Applications </a>
    </div>
    <div class="col-md-10">
    </div>
</div>
<br /><br />