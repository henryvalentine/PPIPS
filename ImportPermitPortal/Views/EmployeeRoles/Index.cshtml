@model IEnumerable<ImportPermitPortal.EF.Model.EmployeeRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br /><br /><br /><br /><br />
<h4>Employees and their job roles</h4>

<p>
    
    <a style="color:blue" href="/EmployeeRoles/Create" class="control-label">Add an Employee to a Role</a>
</p>
<table >
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.AspNetRole.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetRole.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "control-label", @style = "color: blue" })  |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "control-label", @style = "color: blue" })  |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "control-label", @style = "color: blue" }) )
        </td>
    </tr>
}

</table>
