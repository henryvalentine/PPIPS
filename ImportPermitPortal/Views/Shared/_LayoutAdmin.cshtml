    <script src="/BizObjects/frontend/Dialogmin.js"></script>*@

    <script src="/BizObjects/frontend/bootstrap.min.js"></script>

    <link href="/BizObjects/frontend/PagedList.css" rel="stylesheet" type="text/css" />

    <script src="/BizObjects/frontend/jquery.easy-confirm-dialog.js"></script>

    <script src="/BizObjects/frontend/jquery.easy-confirm-dialog.min.js"></script>
    <script src="/Scripts/jquery.dataTables.js"></script>
