@model IEnumerable<ImportPermitPortal.EF.Model.EmployeeDesk>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br /><br /><br /><br /><br /><br />
<h4>List of Employees and their job count</h4>

<p>
    <a href="/EmployeeDesk/Create">Add Employee To Group</a>
</p>
<table >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobCount)
        </th>
       <th>
            @Html.DisplayNameFor(model => model.Group.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Group.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "control-label", @style = "color: blue" })  |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "control-label", @style = "color: blue" })  |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "control-label", @style = "color: blue" }) )
        </td>
    </tr>
}

</table>
