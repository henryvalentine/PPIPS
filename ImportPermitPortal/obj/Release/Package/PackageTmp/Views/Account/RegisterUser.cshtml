@model ImportPermitPortal.Models.UserViewModel
@{
    ViewBag.Title = "Register User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br/><br /><br />
<br /><h4>Create User account.</h4>

@using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post, new { @style = "width: 80%;  border: 3px solid #27ae60;" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row">
        <div class="row">
            <div class="col-md-12">
                <label class="control-label ">Name *</label>
                <input type="text" class="form-control" name="FirstName" value="@Model.FirstName" />
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label class="control-label ">Email *</label>
                <input type="text" class="form-control" name="Email" value="@Model.Email"/>
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.PhoneNumber, new {@class = "control-label"})*
                <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber"/>
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label class="control-label ">Password *</label>
                <input type="password" class="form-control" name="Password"/>
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="col-md-6">
                <label class="control-label ">Confirm Password *</label>
                <input type="password" class="form-control" name="ConfirmPassword"/>
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-10">

            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-default" value="Register" style="float: right"/>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


