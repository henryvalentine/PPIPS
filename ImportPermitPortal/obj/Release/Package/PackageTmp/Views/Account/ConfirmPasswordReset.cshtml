
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="row">
        <div class="col-md-5 ">
            <br /><br />
            <br /><br />
            <div class="row">
                <div class="col-md-11">
                    <h1 class="form-signin-heading text-center">PPIPS</h1>
                    <h4 class="text-center">Petroleum Products Import Permit System</h4>
                    <br />
                </div>
            </div>
            <div class="row">
                <form method="POST" action="/Account/PasswordReset">
                    <div class="row">
                        <div class="col-md-11" style="padding-left: 0px">
                            <label>Reset your Password</label>
                        </div>
                </div><br/>
                    <div class="col-md-12">
                        <br />
                        @{
                            if (ViewBag.ConfirmStat != null)
                            {
                                if (ViewBag.ConfirmStat > 0)
                                {
                                    <label class="control-label" id="sFdBck" style="color: #008000">

                                        @Html.Raw(ViewBag.RegisterationSuccessful);

                                    </label>

                                }

                                if (ViewBag.ConfirmStat < 1)
                                {
                                    <label class="control-label" id="eFdBck" style="color: brown">

                                        @Html.Raw(ViewBag.RegisterationSuccessful);

                                    </label>
                                }
                            }
                        }
                    </div>
                   
                <div class="row" style="display: none">
                    <div class="col-md-11">
                        <input type="hidden" id="em" name="Email" value="@ViewBag.Email" />
                    </div>
                </div>
            <div class="form-group">
                <label>New Password *</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" name="Password" placeholder="Password" style="font-size: 1em" data-val-required="The Password field is required." data-val="true" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label>Confirm Password *</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" name="Confirmpassword" placeholder="Confirm Password" style="font-size: 1em" data-val-required="The Confirm Password field is required." data-val="true" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <a style="float: left; color: #000" class="btn btn-default" href="http://ppips2.shopkeeper.ng/Account/Login">Home</a>
                </div>
                <div class="col-md-8" style="padding-right: 0px">
                    <button class="col-md-12 btn btn-signIn pull-right buttonRadius1" type="submit">Reset Password</button>
                </div>
            </div>

            </form>
        </div>

