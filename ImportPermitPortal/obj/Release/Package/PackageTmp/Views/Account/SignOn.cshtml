@model ImportPermitPortal.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<br /><br /><br /><br />
<h4>Create a new account.</h4>
<hr />
@using (Html.BeginForm("SignOn", "Account", FormMethod.Post, new { @class = "form-horizontal jumbotron", role = "form", @style = "width: 80%" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="row">
        <div class="col-md-12">
            <label class="control-label ">Bank Name *</label>
            <input type="text" class="form-control" name="CompanyName" value="@Model.CompanyName" />
            @Html.ValidationMessageFor(model => model.CompanyName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label class="control-label ">RC Number</label>
            <input type="text" class="form-control" name="RCNumber" value="@Model.RCNumber" />
            @Html.ValidationMessageFor(model => model.RCNumber)
            
        </div>
        <div class="col-md-6">
            <label class="control-label ">TIN</label>
            <input type="text" class="form-control" name="TIN" value="@Model.TIN" />
            @Html.ValidationMessageFor(model => model.TIN)
        </div>
    </div>
    <div class="row">
        <input type="hidden" name="StructureId" value="3" />
        <input type="hidden" name="AccountTypeId" value="2" />
    </div>
    <div class="row">
        <div class="row">
            <div class="col-md-6">
                <label class="control-label ">Email *</label>
                <input type="text" class="form-control" name="Email" value="@Model.Email" />
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.PhoneNumber, new { @class = "control-label" })*
                <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label class="control-label ">Password *</label>
            <input type="password" class="form-control" name="Password" />
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="col-md-6">
            <label class="control-label ">Confirm Password *</label>
            <input type="password" class="form-control" name="ConfirmPassword" />
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-10">

        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-default" value="Register" style="float: right" />
        </div>
    </div>
}